<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btn_qq_login"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="50dp"
        android:text="QQ登录"/>
    <Button
        android:id="@+id/btn_wx_login"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="50dp"
        android:text="WX登录"/>
    <Button
        android:id="@+id/btn_qq_share"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="50dp"
        android:text="QQ分享"/>
    <Button
        android:id="@+id/btn_zone_share"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="50dp"
        android:text="QQ空间分享"/>
    <Button
        android:id="@+id/btn_wx_share"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="50dp"
        android:text="微信分享"/>
    <Button
        android:id="@+id/btn_friend_share"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="50dp"
        android:text="微信朋友圈分享"/>

    <Button
        android:id="@+id/btn_zfb_pay"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="50dp"
        android:text="支付宝支付"/>
    <Button
        android:id="@+id/btn_wx_pay"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="50dp"
        android:text="微信支付"/>
</LinearLayout>
